@using FailTracker.Core.Domain;
@model FailTracker.Web.Models.Account.LogOnForm
@{
    ViewBag._Title = "Log On";
}

<h2>Log On</h2>
@using (Html.BeginForm())
{
	<p>@Html.LabelFor(m => m.EmailAddress) @Html.TextBoxFor(m => m.EmailAddress)</p>
	<p>@Html.LabelFor(m => m.Password) @Html.TextBoxFor(m => m.Password)</p>
	<div class="control-box"><input type="submit" value="Log On" /></div>
}